{
  "version": "0.0.2",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "command": {
    "publish": {
      "npmClient": "yarn",
      "allowBranch": "master",
      "ignoreChanges": [
        "*.md",
        "LICENSE"
      ]
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}
